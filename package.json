{
  "name": "angular-helper",
  "displayName": "Angular助手",
  "publisher": "lad",
  "description": "",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Angular Helper",
      "properties": {
        "angularDefinitionProvider.excludePatterns": {
          "type": "array",
          "default": [
            ".git/**",
            ".history/**",
            ".idea/**",
            ".vscode/**",
            "doc/**"
          ],
          "description": "用于排除解析的文件或文件夹的数组。"
        },
        "angularDefinitionProvider.maxConcurrentParsing": {
          "type": "number",
          "default": 5,
          "description": "最大并发解析文件数"
        },
        "angularDefinitionProvider.maxCachedFiles": {
          "type": "number",
          "default": 100,
          "description": "最大缓存文件数"
        },
        "angularDefinitionProvider.cacheTTL": {
          "type": "number",
          "default": 3600000,
          "description": "缓存生存时间(毫秒),默认为1小时"
        },
        "angularHelper.definitionCacheSize": {
          "type": "number",
          "default": 100,
          "description": "定义查找结果的缓存条目数。增加此值可以提高重复查询的速度，但会占用更多内存。设置为 0 可以禁用缓存。",
          "minimum": 0
        },
        "angularHelper.enablePerformanceLogging": {
          "type": "boolean",
          "default": false,
          "description": "启用性能日志记录。启用后，将记录定义查找的性能数据。"
        },
        "angularHelper.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "启用或禁用日志输出。禁用可能会略微提高性能。"
        },
        "angularHelper.rootDirAliases": {
          "type": "object",
          "default": {
            "__ROOT__": "./",
            "__PUBLIC__": "./Public"
          },
          "description": "根目录别名映射。键是别名，值是相对于工作区根目录的路径。"
        },
        "angularHelper.ignoreScriptPatterns": {
          "type": "array",
          "default": [
            "*.min.js",
            "http://*",
            "https://*"
          ],
          "description": "要忽略的脚本文件模式。支持通配符 *。"
        }
      }
    },
    "commands": [
      {
        "command": "angularHelper.outputPerformanceReport",
        "title": "Angular Helper: Output Performance Report"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "lru-cache": "^7.18.3"
  }
}
